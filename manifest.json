{
  "manifest_version": 3,
  "name": "Facebook Auto Closer",
  "version": "1.0",
  "description": "Closes the Facebook tab after 3 minutes",
  "permissions": ["tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.facebook.com/*"
  ],
  "action": {
    "default_popup": ""
  }
}
